.search {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  padding-top: 40rpx;
}

/* 搜索框 */
.search .search_one {
  margin-right: 20rpx;
  padding-left: 20rpx;
  border: 1px solid #ffffff;
}

.search .search_one input {
  width: 400rpx;
  font-size: 24rpx;
  text-indent: 10rpx;
}

/* 搜索 */
.search .search_two {
  font-size: 28rpx;
}

/* 歌曲列表 */
.micu_list {
  width: 90%;
  margin: 50rpx auto 0;
}

.micu_list .list {
  width: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.micu_list .list .item {
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #ffffff;
}

.micu_list .list .item .item_img {
  position: relative;
}

.micu_list .list .item .item_img .item_imgo {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}

.micu_list .list .item .item_img .item_imgo image {
  width: 80rpx;
  height: 80rpx;
}

.micu_list .list .item .item_img .item_imgt {
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx;
}

.micu_list .list .item .item_img .item_imgt image {
  width: 100%;
  height: 100%;
}